{
  "compilerOptions": {
    "pretty": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "allowJs": false,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true
  },
  "filesGlob": ["src/**/*.ts", "src/**/*.tsx", "punctuation/**/*.tsx"],
  "exclude": ["node_modules/**/*"]
}
